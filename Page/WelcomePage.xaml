<?xml version="1.0" encoding="utf-8" ?>
<Base:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Base="clr-namespace:Iscapop.Base"
             x:Class="Iscapop.Page.WelcomePage"
             Title="WelcomePage">
    
    <VerticalStackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="20">
        <Label Text="Bienvenido a mi aplicación Iscapop"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               FontSize="24"
               FontAttributes="Bold"/>

        <Button Text="Iniciar Sesión"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="FillAndExpand"
                FontSize="20"
                Clicked="OnLoginClicked"/>

        <Button Text="Registrarse"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="FillAndExpand"
                FontSize="20"
                Clicked="OnRegisterClicked"/>

    </VerticalStackLayout>
</Base:BasePage>