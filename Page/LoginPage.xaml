<?xml version="1.0" encoding="utf-8" ?>
<Base:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:Base="clr-namespace:Iscapop.Base"
               x:Class="Iscapop.Page.LoginPage"
               Title="Login up">

    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">

        <!-- Sección de correo electrónico -->
        <Label Text="Correo electrónico:" FontSize="20" />

        <Entry x:Name="txtCorreo" Placeholder="Introduce tu correo electrónico" />

        <Button Text="Enviar código" Clicked="clickEnviarCodigo" BackgroundColor="#007AFF" />

        <!-- Sección de código de validación -->
        <Label Text="Código de validación:" FontSize="20" />

        <Entry x:Name="txtCodigo" Placeholder="Introduce el código de validación" />

        <Button Text="Validar" Clicked="clickValidarCorreo" BackgroundColor="#007AFF" />

    </StackLayout>

</Base:BasePage>