<?xml version="1.0" encoding="utf-8" ?>
<Base:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:Base="clr-namespace:Iscapop.Base"
               x:Class="Iscapop.Page.LoginPage"
               Title="Login up" >

    <VerticalStackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Spacing="20" Margin="20">
        <!-- Sección de correo electrónico -->
        <Label Text="Correo electrónico:" FontSize="20" TextColor="BlueViolet"/>
        <Entry x:Name="txtCorreo" Placeholder="Introduce tu correo electrónico" />
        <Button Text="Enviar código" Clicked="clickEnviarCodigo" />

        <!-- Sección de código de validación -->
        <Label Text="Código de validación:" FontSize="20" TextColor="BlueViolet"/>
        <Entry x:Name="txtCodigo" Placeholder="Introduce el código de validación" />
        <Button Text="Validar" Clicked="clickValidarCorreo" />
    </VerticalStackLayout>

</Base:BasePage>