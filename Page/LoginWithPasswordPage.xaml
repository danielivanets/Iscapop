<?xml version="1.0" encoding="utf-8" ?>
<Base:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:Base="clr-namespace:Iscapop.Base"
               x:Class="Iscapop.Page.LoginWithPasswordPage"
               Title="Login">

    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">

        <!-- Title -->
        <Label Text="Login" FontSize="30" TextColor="#333333" HorizontalOptions="Center" />

        <!-- Email Entry -->
        <Entry x:Name="txtEmail" Placeholder="Email" Keyboard="Email" />

        <!-- Password Entry -->
        <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True" />

        <!-- Button to Login -->
        <Button Text="Login" Clicked="LoginClicked" CornerRadius="8" HorizontalOptions="FillAndExpand" />
    </StackLayout>

</Base:BasePage>