<?xml version="1.0" encoding="utf-8" ?>
<Base:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Base="clr-namespace:Iscapop.Base"
             x:Class="Iscapop.Page.MenuPage"
             Title="MenuPage">
        <ScrollView>
            <StackLayout VerticalOptions="Center">

                <Label Text="Menu" FontSize="30" HorizontalOptions="Center"/>

                <Button Text="Perfil"
                        FontSize="20"
                        FontAttributes="Bold"
                        BackgroundColor="#111111"
                        TextColor="White"
                        Margin="0,20,0,0"
                        Clicked="OnPerfilClicked"/>

                <Button Text="Material"
                        FontSize="20"
                        FontAttributes="Bold"
                        BackgroundColor="#111111"
                        TextColor="White"
                        Margin="0,20,0,0"
                        Clicked="OnMaterialClicked"/>

                <Button Text="Buscar"
                        FontSize="20"
                        FontAttributes="Bold"
                        BackgroundColor="#111111"
                        TextColor="White"
                        Margin="0,20,0,0"
                        Clicked="OnBuscarClicked"/>
            </StackLayout>
        </ScrollView>

</Base:BasePage>