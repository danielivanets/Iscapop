<?xml version="1.0" encoding="utf-8" ?>
<Base:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:Base="clr-namespace:Iscapop.Base"
               x:Class="Iscapop.Page.LoginConfirmPasswordPage"
               Title="LoginConfirmPasswordPage">

    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">

        <!-- Title -->
        <Label Text="Create Password" FontSize="30" HorizontalOptions="Center" />

        <!-- Password Entry -->
        <Entry x:Name="txtPassword" Placeholder="Enter your password" IsPassword="True"/>

        <!-- Confirm Password Entry -->
        <Entry x:Name="txtConfirmPassword" Placeholder="Confirm your password" IsPassword="True"/>

        <!-- Button to Continue -->
        <Button Text="Continue" Clicked="ContinueClicked" CornerRadius="8" HorizontalOptions="FillAndExpand" />
    </StackLayout>
    
</Base:BasePage> 